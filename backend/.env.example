# Base de données PostgreSQL
DATABASE_URL="postgresql://platform_user:platform_pass@localhost:5432/platform_dev"

# Redis pour cache
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# AWS Configuration
AWS_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# AWS Cognito
COGNITO_USER_POOL_ID="eu-central-1_XXXXXXXXX"
COGNITO_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"
COGNITO_CLIENT_SECRET="your-cognito-client-secret"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3002
API_PREFIX="api"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Stripe (pour paiements)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Monitoring
LOG_LEVEL="debug"
ENABLE_SWAGGER=true

# Email (AWS SES)
SES_REGION="eu-central-1"
FROM_EMAIL="noreply@yourplatform.com"

# S3 pour stockage
S3_BUCKET_NAME="platform-storage-dev"
S3_REGION="eu-central-1"

# Sécurité
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003"
TRUST_PROXY=false

# Tests
TEST_DATABASE_URL="postgresql://platform_user:platform_pass@localhost:5432/platform_test"
