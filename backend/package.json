{
  "name": "platform-multi-tenant-backend",
  "version": "1.0.0",
  "description": "Backend multi-tenant pour communaut√©s juives",
  "author": "Platform Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "NODE_OPTIONS=--max-old-space-size=4096 nest build",
    "format": "NODE_OPTIONS=--max-old-space-size=4096 prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_OPTIONS=--max-old-space-size=4096 nest start",
    "start:dev": "NODE_OPTIONS=--max-old-space-size=4096 nest start --watch",
    "start:debug": "NODE_OPTIONS=--max-old-space-size=4096 nest start --debug --watch",
    "start:prod": "NODE_OPTIONS=--max-old-space-size=4096 node dist/main",
    "lint": "NODE_OPTIONS=--max-old-space-size=4096 eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=--max-old-space-size=4096 jest",
    "test:watch": "NODE_OPTIONS=--max-old-space-size=4096 jest --watch",
    "test:cov": "NODE_OPTIONS=--max-old-space-size=4096 jest --coverage",
    "test:debug": "NODE_OPTIONS=--max-old-space-size=4096 node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json",
    "test:tenant-isolation": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=tenant-isolation",
    "test:auth": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=auth.e2e",
    "test:phase1": "NODE_OPTIONS=--max-old-space-size=4096 npm run test:tenant-isolation && npm run test:auth",
    "test:coverage": "NODE_OPTIONS=--max-old-space-size=4096 jest --coverage --coverageThreshold='{\"global\":{\"statements\":80,\"branches\":80,\"functions\":80,\"lines\":80}}'",
    "setup:test-db": "NODE_OPTIONS=--max-old-space-size=4096 node scripts/setup-test-db.js",
    "pretest:e2e": "NODE_OPTIONS=--max-old-space-size=4096 npm run setup:test-db",
    "pretest:tenant-isolation": "NODE_OPTIONS=--max-old-space-size=4096 npm run setup:test-db",
    "pretest:auth": "NODE_OPTIONS=--max-old-space-size=4096 npm run setup:test-db",
    "seed": "NODE_OPTIONS=--max-old-space-size=4096 ts-node prisma/seed.ts",
    "migrate": "NODE_OPTIONS=--max-old-space-size=4096 npx prisma migrate dev",
    "db:reset": "NODE_OPTIONS=--max-old-space-size=4096 npx prisma migrate reset --force && npm run seed",
    "test:performance": "NODE_OPTIONS=--max-old-space-size=4096 jest --testPathPattern=performance --config ./test/jest-e2e.json",
    "test:integration": "NODE_OPTIONS=--max-old-space-size=4096 jest --testPathPattern=integration",
    "test:all": "NODE_OPTIONS=--max-old-space-size=4096 npm run test && npm run test:e2e",
    "db:generate": "NODE_OPTIONS=--max-old-space-size=4096 prisma generate",
    "db:migrate": "NODE_OPTIONS=--max-old-space-size=4096 prisma migrate dev",
    "db:seed": "NODE_OPTIONS=--max-old-space-size=4096 ts-node prisma/seed.ts",
    "db:studio": "NODE_OPTIONS=--max-old-space-size=4096 prisma studio",
    "prisma:generate": "NODE_OPTIONS=--max-old-space-size=4096 prisma generate",
    "prisma:migrate": "NODE_OPTIONS=--max-old-space-size=4096 prisma migrate dev",
    "prisma:studio": "NODE_OPTIONS=--max-old-space-size=4096 prisma studio",
    "prisma:reset": "NODE_OPTIONS=--max-old-space-size=4096 prisma migrate reset",
    "test:admin": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=admin",
    "test:tenant-crud": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=admin.e2e-spec.ts",
    "test:deployment": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=deployment",
    "test:hub": "NODE_OPTIONS=--max-old-space-size=4096 jest --config ./test/jest-e2e.json --testPathPattern=hub",
    "test:phase2": "NODE_OPTIONS=--max-old-space-size=4096 npm run test:admin && npm run test:hub",
    "pretest:admin": "NODE_OPTIONS=--max-old-space-size=4096 npm run setup:test-db",
    "pretest:hub": "NODE_OPTIONS=--max-old-space-size=4096 npm run setup:test-db"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.817.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.1",
    "@pdfme/generator": "^5.4.0",
    "@pdfme/schemas": "^5.4.0",
    "@prisma/client": "^6.10.0",
    "@stripe/stripe-js": "^7.3.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "kosher-zmanim": "^0.9.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "puppeteer": "^24.10.2",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.2",
    "stripe": "^18.2.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.50",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prisma": "^6.9.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
