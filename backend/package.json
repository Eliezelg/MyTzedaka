{
  "name": "platform-multi-tenant-backend",
  "version": "1.0.0",
  "description": "Backend multi-tenant pour communautÃ©s juives",
  "author": "Platform Team",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:tenant-isolation": "jest --config ./test/jest-e2e.json --testPathPattern=tenant-isolation",
    "test:auth": "jest --config ./test/jest-e2e.json --testPathPattern=auth.e2e",
    "test:phase1": "npm run test:tenant-isolation && npm run test:auth",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"statements\":80,\"branches\":80,\"functions\":80,\"lines\":80}}'",
    "setup:test-db": "node scripts/setup-test-db.js",
    "pretest:e2e": "npm run setup:test-db",
    "pretest:tenant-isolation": "npm run setup:test-db",
    "pretest:auth": "npm run setup:test-db",
    "seed": "ts-node prisma/seed.ts",
    "migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset --force && npm run seed",
    "test:performance": "jest --testPathPattern=performance --config ./test/jest-e2e.json",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "npm run test && npm run test:e2e",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "test:admin": "jest --config ./test/jest-e2e.json --testPathPattern=admin",
    "test:tenant-crud": "jest --config ./test/jest-e2e.json --testPathPattern=admin.e2e-spec.ts",
    "test:deployment": "jest --config ./test/jest-e2e.json --testPathPattern=deployment",
    "test:hub": "jest --config ./test/jest-e2e.json --testPathPattern=hub",
    "test:phase2": "npm run test:admin && npm run test:hub",
    "pretest:admin": "npm run setup:test-db",
    "pretest:hub": "npm run setup:test-db"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.817.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.1",
    "@prisma/client": "^5.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.50",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
